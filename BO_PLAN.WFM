   Procedure ABBRUCH_OnOpen
   
    if empty(p_plan->pm_arten)   &&  -> hinzufÅgen
     this.enabled = .f.
    else
     this.enabled = .t.
    endif 
   
    if glTipsUndTricks
     msgbox("Mehrere PrÅfmittelarten kînnen durch gedrÅckhalten der Strg-Taste ausgewÑhlt werden.","Tips & Tricks",64)
    endif
   
   
   Procedure PM_ARTEN_OnOpen

    sele os
    set order to 2
    set filter to log_pm_art
    this.datasource = "field os->ben"
    
    
     
   Procedure OK_OnClick
   
    local lcPmArten
    lcPmArten = ""
    sele os
    set order to 2
    for i=1 to listcount(form.pm_arten)
     if .not. empty(listselected(form.pm_arten,i))
      seek listselected(form.pm_arten,i)
      lcPmArten = lcPmArten + codewort
     endif      
    next
    do case
     case empty(lcPmArten)
      msgbox("Fehler: Es mu· mindestens eine PrÅfmittelart festgelegt werden.","Achtung",48)
      form.pm_arten.setfocus()
     case len(lcPmArten) > 100
      msgbox("Fehler: Es wurden zu viele PrÅfmittelarten festgelegt.","Achtung",48)
      form.pm_arten.setfocus()
     otherwise
      set filter to log_pm_art .and. codewort $ p_plan->pm_arten
      sele p_plan
      repl pm_arten with lcPmArten
      form.close()
    endcase


